# EditorConfig is awesome: https://EditorConfig.org

# Root file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Java files
[*.java]
indent_style = space
indent_size = 4
tab_width = 4

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# YAML files
[*.yml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
